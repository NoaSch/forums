<Window x:Class="forums.View.CreateFriendsGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:forums.View"
        mc:Ignorable="d"
        Title="Create Friends Group" Height="200" Width="300">
    <Grid Height="271" Margin="0,0,0.333,-0.333" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="15,30,0,0" VerticalAlignment="Top" Width="260" Orientation="Horizontal" Height="37">
            <Label Grid.Column="0" Content="Group Name:" />
            <TextBox Grid.Column="1" x:Name="name" TextWrapping="Wrap" Text="" Width="160" Height="30" VerticalAlignment="Top"/>
        </StackPanel>

        <Button Grid.Row="1" Grid.ColumnSpan="2" Content="Create Group" HorizontalAlignment="Center"  Width="115" Height="20" VerticalAlignment="Top" Click="AddBtn_click"/>

    </Grid>
</Window>
